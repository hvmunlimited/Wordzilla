<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android" >
    <item android:state_pressed="true">
        <shape>
            <solid 	
                android:color="@color/blue_base"/>
            <stroke 
                android:color="@color/blue_stroke"
                android:width="1dip"/>
            <corners 
                android:radius="3dp"/>
            <padding 
                android:left="40dip"
            	android:right="40dip"/>
            </shape>    
    </item>
    <item>
        <shape>
            <gradient 
                android:startColor="@android:color/transparent"
                android:endColor="@color/blue_gradient_end"
                android:angle="270"/>
            <stroke 
                android:color="@android:color/transparent"
                android:width="1dip"/>
            <corners 
                android:radius="3dp"/>
            <padding 
                android:left="40dip"
            	android:right="40dip"/>
            </shape>    
    </item>
</selector>
